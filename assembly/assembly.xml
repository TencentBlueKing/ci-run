<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <!-- 从目标目录拷贝文件去压缩 -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>run-jar-with-dependencies.jar</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <includes>
                <include>*.json</include>
            </includes>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory></directory>
            <includes>
                <include>README_EN.md</include>
                <include>README.md</include>
            </includes>
            <outputDirectory>/file</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>img</directory>
            <includes>
                <include>command.png</include>
                <include>logo.png</include>
            </includes>
            <outputDirectory>/file</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/i18n</directory>
            <outputDirectory>/i18n</outputDirectory>
            <includes>
                <include>*.properties</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
